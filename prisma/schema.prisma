generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  status Int @default(0)

  wallets  Wallet[] // 1:n
  sessions Session[]
  notes    Note[]    @relation("NotesCreatedBy")
}

model Wallet {
  id        String   @id @default(uuid()) 
  name      String
  balance   Int      @default(0)
  createdAt DateTime @default(now())
  status    Int      @default(0) //status 0 = active

  sentTransactions     Transaction[] @relation("FromWallet")
  receivedTransactions Transaction[] @relation("ToWallet")

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, status])
}

model Session {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  expiresAt DateTime

  ip        String?
  userAgent String?

  @@index([userId])
  @@index([expiresAt])
}

enum TxType {
  TRANSFER
}

model Transaction {
  id           String @id @default(uuid())
  fromWalletId String
  fromWallet   Wallet @relation("FromWallet", fields: [fromWalletId], references: [id], onDelete: Cascade)

  toWalletId String
  toWallet   Wallet @relation("ToWallet", fields: [toWalletId], references: [id], onDelete: Cascade)

  type      TxType
  amount    Int
  note      String?
  createdAt DateTime @default(now())

  idempotencyKey String? @unique

  @@index([fromWalletId])
  @@index([toWalletId])
  @@index([createdAt])
}

enum NoteTargetType {
  USER
  WALLET
  TRANSAKTION
}

model Note {
  id         String         @id @default(cuid())
  targetType NoteTargetType
  targetId   String // id of noted object (userId, walletId, etc)
  title      String?
  body       String
  isPinned   Boolean        @default(false)

  // Who created the note?
  createdById String
  createdBy   User   @relation("NotesCreatedBy", fields: [createdById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([targetType, targetId])
  @@index([createdById])
}
